@model List<Entidad.Cliente>

@{
    ViewBag.Title = "Lista de Clientes";
}
<a href="~/Reportes/">Reporte</a>
<h2 class="text-center text-success"> Listado de Clientes</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Nuevo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Identificacion</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>
                <td>
                    @objCliente.Identificacion
                </td>
                <td>
                    @objCliente.P_nombre @objCliente.S_nombre
                </td>
                <td>
                    @objCliente.P_apellido @objCliente.S_apellido
                </td>
                <td>
                    @objCliente.Direccion
                </td>
                <td>
                    @objCliente.Telefono
                </td>
                <td><a class="btn btn-success" href="#"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="#"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="#"><span class="fa fa-book"></span></a></td>
            </tr>
        }
        </tbody>
</table>
