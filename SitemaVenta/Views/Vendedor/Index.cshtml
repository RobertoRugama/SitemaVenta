@model List<Entidad.Vendedor>

@{
    ViewBag.Title = "Lista de Vendedores";
}
<h2 class="text-center text-success"> Listado de Vendedores</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Vendedor/Create">Nuevo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Identificacion</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objVendedor in Model)
        {
            <tr>
                <td>
                    @objVendedor.Identificacion
                </td>
                <td>
                    @objVendedor.P_nombre @objVendedor.S_nombre
                </td>
                <td>
                    @objVendedor.P_apellido @objVendedor.S_apellido
                </td>
                <td>
                    @objVendedor.Telefono
                </td>
                <td><a class="btn btn-success" href="#"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="#"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="#"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>
</table>